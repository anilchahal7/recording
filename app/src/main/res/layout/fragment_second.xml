<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recording_image_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_sound_recorder_heading"
        android:background="@drawable/circle"
        android:layout_marginTop="56dp"
        app:layout_constraintDimensionRatio="1:1.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recording_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_sound_recorder_heading"
        android:layout_marginTop="56dp"
        android:background="@drawable/circle"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_microphone"
        app:layout_constraintDimensionRatio="1:1.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_36"
        ads:layout_constraintBottom_toTopOf="@id/button_play_recording"
        android:layout_marginBottom="48dp"/>

    <ImageButton
        android:id="@+id/button_play_recording"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/white_circle_grey_border"
        android:contentDescription="@string/play"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play"
        android:visibility="visible"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toLeftOf="@id/button_share_recording"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp" />

    <ImageButton
        android:id="@+id/button_share_recording"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/white_circle_grey_border"
        android:contentDescription="@string/play"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_share"
        android:visibility="visible"
        ads:layout_constraintLeft_toRightOf="@id/button_play_recording"
        ads:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp" />

</android.support.constraint.ConstraintLayout>